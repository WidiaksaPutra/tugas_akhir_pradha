<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/green">
            <Button
                android:onClick="backdetail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_chevron_left_24"
                android:backgroundTint="@color/white" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/gambar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:orientation="vertical" />
            <TextView
                android:id="@+id/nama_tempat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"
                android:background="#B9235952"
                android:textSize="20dp"
                android:padding="8dp"
                android:fontFamily="serif"
                android:textColor="@color/white" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Alamat :"
                android:textColor="@color/green"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lokasi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:background="@drawable/green"
                android:fontFamily="serif"
                android:paddingLeft="10dp"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Deskripsi :"
                android:textColor="@color/green"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/deskripsitempat"
                android:background="@drawable/green1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:fontFamily="serif" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Waktu :"
                android:textColor="@color/green"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/waktu"
                android:background="@drawable/green"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:fontFamily="serif" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Jenis Tempat :"
                android:textColor="@color/green"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/jenistempat"
                android:background="@drawable/green"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:fontFamily="serif" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Harga :"
                android:textColor="@color/green"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/harga"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:background="@drawable/green"
                android:fontFamily="serif"
                android:paddingLeft="10dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Aturan :"
                android:textColor="@color/green"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/aturan"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:background="@drawable/green1"
                android:fontFamily="serif"
                android:paddingLeft="10dp"
                android:textColor="@color/white" />
            <Button
                android:onClick="Boking"
                android:background="@drawable/green1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:text="BOKING"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/latitude"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:background="@drawable/green"
                android:fontFamily="serif"
                android:paddingLeft="10dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/longitude"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:background="@drawable/green"
                android:fontFamily="serif"
                android:paddingLeft="10dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/key" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/key1" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>